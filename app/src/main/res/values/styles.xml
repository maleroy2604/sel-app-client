<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorBackgroundExchange</item>
        <item name="colorPrimary">@color/colorExchangeItem</item>
    </style>

    <style name="headerStyle">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">@color/colorText</item>
    </style>


    <style name="TextInputLayoutAppearance">
        <item name="colorControlNormal">@color/colorExchangeItem</item>
        <item name="colorControlActivated">@color/colorExchangeItem</item>
        <item name="android:textColor">@color/colorExchangeItem</item>
        <item name="android:textColorHint">@color/colorExchangeItem</item>
    </style>

    <style name="TextInputLayoutAppearanceDiscussion">
        <item name="colorControlNormal">@color/colorBackgroundExchange</item>
        <item name="colorControlActivated">@color/colorBackgroundExchange</item>
        <item name="android:textColor">@color/colorBackgroundExchange</item>
        <item name="android:textColorHint">@color/colorBackgroundExchange</item>
    </style>

    <style name="MyEditText" parent="TextInputLayoutAppearance">

    </style>

    <style name="DrawerTheme">
        <item name="itemTextColor">@color/colorText</item>
        <item name="itemIconTint">@color/colorText</item>
    </style>

</resources>
