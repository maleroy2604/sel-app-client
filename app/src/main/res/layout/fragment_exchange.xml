<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_exchange"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorExchangeItem"
    android:padding="10dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_exchange_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorExchangeItem" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sorting_option_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:src="@drawable/ic_close"
        android:visibility="invisible"
        app:layout_anchor="@id/fragment_exchange_recycler_view"
        app:layout_anchorGravity="top|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
