<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_no_connexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/no_internet_connexion_available"
        android:textColor="@color/colorBackgroundExchange"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_no_connexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_no_connexion"
        android:layout_centerHorizontal="true"
        android:background="@drawable/backgroundnitem"
        android:text="@string/retry"
        android:textColor="@color/colorText"
        android:textSize="18sp" />
</RelativeLayout>