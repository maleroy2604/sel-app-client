<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbarThumbVertical="@drawable/custom_scroll_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background"
        android:orientation="vertical"
        android:padding="21dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:src="@drawable/sel" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Complete the fields."
            android:textColor="@color/colorExchangeItem"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_sign_up_input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            app:errorEnabled="true"
            app:errorTextAppearance="@color/colorExchangeItem"
            app:passwordToggleEnabled="true"
            app:theme="@style/TextInputLayoutAppearance">

            <EditText
                android:id="@+id/fragment_sign_up_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="Username"
                android:imeOptions="flagNoExtractUi"
                android:textColor="@color/colorExchangeItem"
                app:theme="@style/MyEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_sign_up_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            app:errorEnabled="true"
            app:errorTextAppearance="@color/colorExchangeItem"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorExchangeItem"
            app:theme="@style/TextInputLayoutAppearance">

            <EditText
                android:id="@+id/fragment_sign_up_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:textColor="@color/colorExchangeItem"
                app:theme="@style/MyEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_sign_up_input_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            app:errorEnabled="true"
            app:errorTextAppearance="@color/colorExchangeItem"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorExchangeItem"
            app:theme="@style/TextInputLayoutAppearance">

            <EditText
                android:id="@+id/fragment_sign_up_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:textColor="@color/colorExchangeItem"
                app:theme="@style/MyEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_sign_up_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:textColor="@color/colorExchangeItem"
            app:errorEnabled="true"
            app:theme="@style/TextInputLayoutAppearance"
            app:errorTextAppearance="@color/colorExchangeItem">

            <EditText
                android:id="@+id/fragment_sign_up_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorExchangeItem"
                app:theme="@style/MyEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/fragment_btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shadow"
            android:text="SignUp"
            android:textColor="@color/colorExchangeItem" />


        <TextView
            android:id="@+id/fragment_link_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Already an account ? Log in."
            android:textColor="@color/colorExchangeItem"
            android:textSize="16sp" />

    </LinearLayout>


</ScrollView>