<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shadow"
    android:orientation="vertical"
    android:paddingBottom="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:elevation="12dp">

        <ImageView
            android:id="@+id/image_bck_exchange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sel" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/image_view_profile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sel" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fragment_exchange_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="20dip" />

        <ImageButton
            android:id="@+id/fragment_exchange_item_horiz"
            android:layout_width="@dimen/button_image_width"
            android:layout_height="22dip"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:background="@drawable/ic_more_horiz_blue"
            android:contentDescription="@string/todo" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_exchange_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/fragment_exchange_item_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/fragment_exchange_item_capacity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="20dip" />
    </LinearLayout>
</LinearLayout>
